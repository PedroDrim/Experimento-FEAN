<!DOCTYPE html>
<html lang="en">

<%- include('head'); %>

  <body class="cyan loaded">
    <!-- Start Page Loading -->
    <div id="loader-wrapper">
      <div id="loader"></div>
      <div class="loader-section section-left"></div>
      <div class="loader-section section-right"></div>
    </div>
    <!-- End Page Loading -->

    <div id="login-page" class="row">
      <div class="col s12 z-depth-4 card-panel">
        <form class="login-form" method="post" action="/account/create">

          <div class="row">
            <div class="input-field col s12 center">
              <img src="/images/login-logo.png" alt="" class="responsive-img valign profile-image-login">
              <p class="center login-form-text">Create new MyBuilder account</p>
            </div>
          </div>

          <div class="row margin">
            <div class="input-field col s12">
              <i class="prefix material-icons">person_outline</i>
              <input id="name" type="text" name="name" class="validate">
              <label for="name" class="center-align" data-error="wrong" data-success="right">Name</label>
            </div>
          </div>

          <div class="row margin">
            <div class="input-field col s12">
              <i class="prefix material-icons">email_outline</i>
              <input id="email" type="text" name="email" class="validate">
              <label for="email" class="center-align" data-error="wrong" data-success="right">Email</label>
            </div>
          </div>

          <div class="row margin">
            <div class="input-field col s12">
              <i class="prefix material-icons">lock_outline</i>
              <input id="password" type="password" name="password" class="validate">
              <label for="password" class="center-align" data-error="wrong" data-success="right">Password</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <input type="submit" id="submit" value="Create" class="btn waves-effect waves-light col s12" />
            </div>
          </div>

          <div class="row">
            <div class="input-field col s6 m6 l6">
              <p class="margin medium-small"><a href="/account/login">Login now!</a></p>
            </div>
            <div class="input-field col s6 m6 l6">
              <p class="margin right-align medium-small"><a href="/account/reset">Forgot password ?</a></p>
            </div>
          </div>

        </form>

      </div>
    </div>

    <%- include('scripts'); %>

      <div class="hiddendiv common"></div>
  </body>

</html>